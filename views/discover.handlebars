<!-- Content -->
<div class="w3-display-container w3-content discover" style="max-width:1500px;">
    <img class="w3-image background-image" src="assets/img/concert3.jpg" alt="concert-scene" style="min-width:1000px" width="1500">
    <div class="w3-main" style="margin-left:250px;margin-right:40px">
        <div class="w3-padding">
            <h1 class="welcome">Hi {{user.fname}}!</h1>

            <div class="w3-container w3-text-white">
                <h3>Discover Events Happening Near You</h3>
            </div>

            <div class="w3-row-padding w3-padding-16 w3-text-white w3-large" style="width:100%">
                {{#each events}}
                <div class="w3-half w3-margin-bottom">
                    <div class="w3-display-container">
                        <img src="{{image.medium.url}}" style="width:100%">
                        <span class="w3-display-bottomleft w3-padding">{{title}}</span>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>