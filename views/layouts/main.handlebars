            <div class="w3-dropdown-click w3-mobile myprofile w3-display-topleft">
                <button onclick="myFunction()" class="w3-bar-item w3-button">
                    <i class="fa fa-user-circle-o w3-hover-opacity w3-text-white w3-xxlarge"></i>
                </button>
                <div id="menu" class="w3-dropdown-content w3-bar-block w3-border">
                    <a href="profile" class="w3-bar-item w3-button w3-mobile">My Profile</a>
