            <h2 class="w3-padding-32">
                <b><h1 id="logo" class="w3-text-white">Hi {{user.fname}}!</h1></b>
            </h2>
        </div>
    {{else}}
        <div class="w3-container">
            <h2 class="w3-padding-64">
                <b></b>
